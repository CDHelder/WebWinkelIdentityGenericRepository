@page
@model WebWinkelIdentity.Web.Areas.Shipments.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Shipment</h4>
<hr />
<h3 style="color:red">@Model.FormResult</h3>
<br />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <td>
                        From
                    </td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                    <td>
                        To
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <select asp-for="StartLocationStoreId" class="form-control" asp-items="Model.AllStores"
                                    style="width:200px"></select>
                        </div>
                    </td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                    <td>
                        <div class="form-group" style="display:inline-block">
                            <select asp-for="DeliveryLocationStoreId" class="form-control" asp-items="Model.AllStores"
                                    style="width:200px"></select>
                        </div>
                    </td>
                </tr>
            </table>
            <br />

            <textarea asp-for="AllText" class="form-group"
                      style="min-width:300px; min-height:550px; font-size:30pt"
                      placeholder="Make sure the id of the item on its label is in the textbox

and that every id has its own line">
            </textarea>

            <div class="form-group">
                <input type="submit" value="Create Shipment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
